                                    <version>${org.apache.commons.pool.version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>org.apache.commons.lang</symbolicName>
                                    <version>${commons-lang.version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>commons-beanutils</symbolicName>
