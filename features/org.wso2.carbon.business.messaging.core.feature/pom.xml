                                </bundle>
                                <bundle>
                                    <symbolicName>commons-beanutils</symbolicName>
                                    <version>${commons-beanutils.version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>com.google.guava</symbolicName>
                                    <version>${guava.bundle.version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>libthrift</symbolicName>
                                    <version>${libthrift.version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>axis2-transport-jms</symbolicName>
                                    <version>${axis2.transport.jms.version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>axis2-transport-rabbitmq-amqp</symbolicName>
