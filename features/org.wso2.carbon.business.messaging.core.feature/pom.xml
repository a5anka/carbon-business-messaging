                                </bundle>
                                <bundle>
                                    <symbolicName>commons-collections</symbolicName>
                                    <version>${orbit.version.commons.collection}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>commons-cli</symbolicName>
                                    <version>${commons-cli.wso2.version}</version>
                                </bundle>
                                <bundle>
                                    <symbolicName>commons-codec</symbolicName>
                                    <version>${commons-codec.version}</version>
                                </bundle>
                            </bundles>
                        </configuration>
                    </execution>
                </executions>
            </plugin>
        </plugins>
    </build>

</project>
